{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "LoadBalancer": {
    "HealthProbeIntervalSeconds": 5,
    "HealthProbeTimeoutSeconds": 2,
    "HealthProbePath": "/health",
    "MetricsProbePath": "/metrics",
    "ProbeFailureThreshold": 2,
    "RetryOnUpstreamFailure": 1,
    "UpstreamRequestTimeoutSeconds": 30,
    "GlobalPendingHardLimit": 2000,
    "Weights": {
      "Active": 0.5,
      "Cpu": 0.3,
      "Mem": 0.2
    },
    "Servers": [
      { "Id": "api-1", "BaseAddress": "http://localhost:5073", "MaxActiveRequests": 1 },
      {
        "Id": "api-2",
        "BaseAddress": "http://localhost:5074",
        "MaxActiveRequests": 1
      },
      {
        "Id": "api-3",
        "BaseAddress": "http://localhost:5075",
        "MaxActiveRequests": 1
      }

    ]
  }
}
